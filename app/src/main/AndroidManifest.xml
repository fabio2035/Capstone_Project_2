<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fbrigati.myfinance">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ItemListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fbrigati.myfinance.ItemListActivity" />
        </activity>
        <activity
            android:name=".ui.StatementActivity"
            android:label="@string/title_StatementActivity_detail"
            android:parentActivityName=".ItemListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fbrigati.myfinance.ItemListActivity" />
        </activity>
        <activity
            android:name=".ui.BudgetActivity"
            android:label="@string/title_BudgetActivity_detail"
            android:parentActivityName=".ItemListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fbrigati.myfinance.ItemListActivity" />
        </activity>
        <activity
            android:name=".ui.StatsActivity"
            android:label="@string/title_StatsActivity_detail"
            android:parentActivityName=".ItemListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fbrigati.myfinance.ItemListActivity" />
        </activity>
        <provider
            android:authorities="@string/content_authority"
            android:name=".data.DataProvider"
            android:exported="false"
            android:syncable="true" />
    </application>

</manifest>