<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    app:columnCount="3"
    app:rowCount="2"
    app:orientation="horizontal">

    <TextView
        android:id="@+id/row_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        app:layout_columnSpan="3"
        app:layout_rowSpan="1"
        tools:text="Monday, 08"
        />


    <include
        layout="@layout/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />


    <TextView
        android:id="@+id/row_description"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textAppearance="@style/StatementTextStyle"
        app:layout_gravity="left"
        app:layout_columnSpan="1"
        tools:text="Drinks with Nick"
        />
    <TextView
        android:id="@+id/row_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textAppearance="@style/EditTextStyle"
        app:layout_gravity="end"
        app:layout_columnSpan="1"
        tools:text="- 200.00"
        />

</android.support.v7.widget.GridLayout>
