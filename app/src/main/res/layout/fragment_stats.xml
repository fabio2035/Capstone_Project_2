<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </android.support.design.widget.AppBarLayout>


<android.support.v7.widget.GridLayout
    android:id="@+id/master_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:orientation="vertical"
    app:rowCount="5"
    app:columnCount="1">

    <include layout="@layout/item_detail_piechart"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_rowWeight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_rowWeight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/SmallTextStyle"
            android:text="@string/semester_label"
            android:layout_gravity="center_horizontal"
            />
        <SeekBar
        android:id="@+id/seekBarpie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:layout_toLeftOf="@+id/tvYMax"
        android:layout_marginRight="5dp"
        android:max="200"
        android:paddingBottom="5dp"/>
        <LinearLayout
            android:id="@+id/seekBarLabelLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_height="10dp"
        android:layout_width="match_parent"
        app:layout_rowWeight="1"
        />

    <include layout="@layout/item_detail_linechart"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_rowWeight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_rowWeight="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/SmallTextStyle"
            android:text="@string/category_label"
            android:layout_gravity="center_horizontal"
            />
        <SeekBar
            android:id="@+id/seekBarLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/tvYMax"
            android:layout_marginRight="5dp"
            android:max="200"
            android:paddingBottom="5dp"/>

        <LinearLayout
            android:id="@+id/seekBarLabelLineLayout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            >
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.GridLayout>

</LinearLayout>
    </ScrollView>